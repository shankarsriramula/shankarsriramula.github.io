doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' integrity='sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr' crossorigin='anonymous')
  link(rel='stylesheet' href='../public/stylesheets/font-awesome-5.7.2.css')
  link(rel='stylesheet' href='../public/stylesheets/bootstrap.css')
  link(rel='stylesheet' href='../public/stylesheets/mdb.css')
  link(rel='stylesheet' href='../public/stylesheets/style.css')
  title home Page

// Main Navigation
include layout/navbar.pug

// main Content Section
section.p-3.container-fluid
  h1.text-success #{pageTitle}

.container
  .row
    .col-md-2
    .col-md-8
      .card
        .card-header.bg-primary.text-white.text-center
          h3 Employee Registration
        .card-body
          form(action='/register' method='post')
            .row
              .col-md-6
                .form-group
                  input.form-control(type='text' placeholder='Employee Name' name='emp_name')
                .form-group
                  input.form-control(type='number' placeholder='Employee Ages' name='emp_age')
              .col-md-6
                .form-group
                  select.form-control(name='emp_designation')
                    option(value='Software Engineer') Software Engineer
                    option(value='Sr. Software Engineer') Sr. Software Engineer
                    option(value='Tech Lead') Tech Lead
                    option(value='Sr. Tech Lead') Sr. Tech Lead
                    option(value='Project Manager') Project Manager
                .form-group
                  select.form-control(name='job_location')
                    option(value='Hyderabad') Hyderabad
                    option(value='Bangalore') Bangalore
                    option(value='Other') Other
            input.btn.btn-primary(type='submit' value='Register')
    .col-md-2

  .row
    .col
      table.table.text-center.table-hover.mt-5
        thead.bg-success.text-white
          tr
            th EMPLOYEE NAME
            th EMPLOYEE AGE
            th EMPLOYEE DESIGNATION
            th JOB LOCATION
        tbody
          each employee in employees
            tr
              td #{employee.emp_name}
              td #{employee.emp_age}
              td #{employee.emp_designation}
              td #{employee.job_location}


// JavaScript Files
script(src='../public/javascripts/jquery-3.3.1.min.js')
script(src='../public/javascripts/popper.min.js')
script(src='../public/javascripts/bootstrap.js')
script(src='../public/javascripts/mdb.js')
