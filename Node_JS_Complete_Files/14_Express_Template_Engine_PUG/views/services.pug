doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' integrity='sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr' crossorigin='anonymous')
  link(rel='stylesheet' href='../public/stylesheets/font-awesome-5.7.2.css')
  link(rel='stylesheet' href='../public/stylesheets/bootstrap.css')
  link(rel='stylesheet' href='../public/stylesheets/mdb.css')
  link(rel='stylesheet' href='../public/stylesheets/style.css')
  title home Page

// Main Navigation
include layout/navbar.pug

// main Content Section
section.p-3.container-fluid
  h1.text-success #{pageTitle}
  table.table.table-hover.text-center
    thead.bg-dark.text-white
      tr
        th NAME
        th AGE
        th DESIGNATION
        th ACTIVE
    tbody
      each employee in employees
        tr
          td #{employee.name}
          td #{employee.age}
          td #{employee.designation}
          td #{employee.active}

// JavaScript Files
script(src='../public/javascripts/jquery-3.3.1.min.js')
script(src='../public/javascripts/popper.min.js')
script(src='../public/javascripts/bootstrap.js')
script(src='../public/javascripts/mdb.js')
