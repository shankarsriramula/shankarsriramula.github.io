<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/stylesheets/font-awesome-5.7.2.css">
    <link rel="stylesheet" href="../public/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="../public/stylesheets/mdb.css">
    <link rel="stylesheet" href="../public/stylesheets/style.css">
    <title><%= pageTitle %></title>
</head>
<body>


   <!-- Main Navigation -->
   <% include layout/navbar.ejs %>


   <!-- Main Content -->
   <section class="p-3 container-fluid">
       <div class="row">
           <div class="col">
               <h1 class="text-primary"><%= pageTitle %></h1>
           </div>
       </div>
   </section>

   <!-- Employee Registration -->
   <div class="container">
       <div class="row">
           <div class="col-md-2"></div>
           <div class="col-md-8">
               <div class="card ">
                   <div class="card-header bg-primary text-white text-center">
                       <h3>Employee Registration</h3>
                   </div>
                   <form action="/register" method="post">
                       <div class="card-body">
                           <div class="row">
                               <div class="col-md-6">
                                   <div class="form-group">
                                       <input name="emp_name" type="text" class="form-control" placeholder="Employee Name">
                                   </div>
                                   <div class="form-group">
                                       <input name="emp_age" type="number" class="form-control" placeholder="Employee Age">
                                   </div>
                               </div>
                               <div class="col-md-6">
                                   <div class="form-group">
                                       <select name="emp_designation" class="form-control">
                                           <option value="Software Engineer">Software Engineer</option>
                                           <option value="Sr. Software Engineer">Sr. Software Engineer</option>
                                           <option value="Technical Lead">Technical Lead</option>
                                           <option value="Sr.Technical Lead">Sr.Technical Lead</option>
                                           <option value="Project Manager">Project Manager</option>
                                       </select>
                                   </div>
                                   <div class="form-group">
                                       <select name="job_location" class="form-control">
                                           <option value="Hyderabad">Hyderabad</option>
                                           <option value="Bangalore">Bangalore</option>
                                           <option value="Other">Other</option>
                                       </select>
                                   </div>
                               </div>
                           </div>
                           <div class="row">
                               <div class="col">
                                   <input type="submit" value="Register" class="btn btn-primary">
                               </div>
                           </div>
                       </div>
                   </form>
               </div>
           </div>
           <div class="col-md-2"></div>
       </div>
   </div>

   <!-- Table Section -->
   <div class="container mt-5">
       <div class="row">
           <div class="col">
               <div class="card">
                   <div class="card-header text-center">
                       <h4>Employee Details

                       </h4>
                   </div>
                   <div class="card-body">
                       <table class="table text-center table-hover">
                           <thead class="bg-success text-white">
                           <tr>
                               <th>EMPLOYEE NAME</th>
                               <th>EMPLOYEE AGE</th>
                               <th>EMPLOYEE DESIGNATION</th>
                               <th>JOB LOCATION</th>
                           </tr>
                           </thead>
                           <tbody>
                                <% employees.forEach((employee) => { %>
                                    <tr>
                                        <td><%= employee.emp_name %></td>
                                        <td><%= employee.emp_age %></td>
                                        <td><%= employee.emp_designation %></td>
                                        <td><%= employee.job_location %></td>
                                    </tr>
                                <% });%>
                           </tbody>
                       </table>
                   </div>
               </div>
           </div>
       </div>
   </div>


   <!-- JavaScript Files -->
<script src="../public/javascripts/jquery-3.3.1.min.js"></script>
<script src="../public/javascripts/popper.min.js"></script>
<script src="../public/javascripts/bootstrap.js"></script>
<script src="../public/javascripts/mdb.js"></script>
</body>
</html>