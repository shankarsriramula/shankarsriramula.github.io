<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/stylesheets/font-awesome-5.7.2.css">
    <link rel="stylesheet" href="../public/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="../public/stylesheets/mdb.css">
    <link rel="stylesheet" href="../public/stylesheets/style.css">
    <title>Act Service App</title>
</head>
<body>

    <!-- Main Navigation Bar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-danger">
        <a class="navbar-brand" href="#">Act Services</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link px-4" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-4" href="/raise">Raise a Complaint</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link px-4" href="/list">List Complaints</a>
                </li>
            </ul>
        </div>
    </nav>


    <!-- Main Content Section -->
    <section class="p-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col text-center">
                    <h1 class="font-weight-bold text-danger">List of Complaints</h1>
                    <table class="table table-hover">
                        <thead class="text-uppercase blue-gradient-rgba text-white">
                            <tr>
                                <th>Issue ID</th>
                                <th>Account Number</th>
                                <th>Customer Name</th>
                                <th>Issue</th>
                                <th>Priority</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% complaints.forEach((complaint) => { %>
                                <tr>
                                    <td> <%= complaint._id.toString() %> </td>
                                    <td> <%= complaint.username %> </td>
                                    <td> <%= complaint.account %> </td>
                                    <td> <%= complaint.issue %> </td>
                                    <td> <%= complaint.priority %> </td>
                                </tr>
                            <% });%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Footer -->
    <footer class="p-3 bg-dark text-white text-center fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3>Copyright &copy; 2019 , Act Services</h3>
                    <h6>All Rights Reserved</h6>
                    <h6>Developed & Maintained by Act Services</h6>
                </div>
            </div>
        </div>
    </footer>

<!-- JavaScripts -->
<script src="../public/javascripts/jquery-3.3.1.min.js"></script>
<script src="../public/javascripts/popper.min.js"></script>
<script src="../public/javascripts/bootstrap.js"></script>
<script src="../public/javascripts/mdb.js"></script>
</body>
</html>